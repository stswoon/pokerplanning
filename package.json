{
  "name": "poker-planning",
  "version": "0.3.1",
  "description": "Poker planning",
  "engines": {
    "node": "16.x"
  },
  "license": "MIT",
  "scripts": {
    "serve-server": "cd server && npm run serve",
    "serve-client": "cd client && npm run serve",
    "build-server": "cd server && npm ci && npm run build",
    "build-client": "cd client && npm ci && npm run build",
    "copy-client": "cd client/dist && copyfiles --verbose ./**/* ../../server/dist/public",
    "start-prod": "npm run build-server && npm run build-client && run copy-client && node server/dist/server.js",
    "start-prod-2": "node server/dist/server.js"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "husky": "^8.0.1",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"[Husky] pre-commit\""
    }
  }
}
